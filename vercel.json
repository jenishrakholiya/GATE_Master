{
  "builds": [
    {
      "src": "backend/gate_master/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3.11" }
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/gate_master/wsgi.py"
    },
    {
      "src": "/admin/(.*)",
      "dest": "backend/gate_master/wsgi.py"
    },
    {
      "src": "/static/(.*)",
      "dest": "backend/gate_master/wsgi.py"
    },
    {
      "src": "/media/(.*)",
      "dest": "backend/gate_master/wsgi.py"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ]
}
